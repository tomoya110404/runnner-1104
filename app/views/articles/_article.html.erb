<div class="card" style="width: 18rem;">
 
  <%= image_tag(article.image, class: "card-img-top") %>
  <div class="card-body">
    <h5 class="card-title"><%= article.title %></h5>
    <p class="card-text"><%= article.menu %></p>
    <div class="favocount">
      <div class="iine">いいね数</div>
      <%= article.favorite.count %>
    </div>
    <div class="card-bottom">
      <%= link_to "記事を見る", article_path(article.id), class: "btn btn-primary" %>
      <%= link_to article.user.nickname, "#", class: "btn btn-right" %>
    </div>
  </div>
</div>