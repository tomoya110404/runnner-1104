<div class="card" style="width: 18rem;">
  <% if @meal.first.image.present? %>
    <%= image_tag(@meal.first.image, size: '100x100', class: "card-img-top") %>
  <% else %>  
    <div class="card-img-top aaa">No Image</div>
  <% end %>  
  <div class="card-body">
    <h5 class="card-title"><%= @meal.first.kondate %></h5>
    <p class="card-text"><%= @meal.first.recipe %></p>
    <div class="favocount">
      <div class="iine">いいね数</div>
      <div class="favo-count"><%= @meal.first.meal_favorites.count %></div>
    </div>
    <div class="card-bottom">
      <%= link_to "記事を見る", meal_path(@meal.first.id), class: "btn btn-primary" %>
      <%= link_to "作成者#{@meal.first.user.nickname}", user_path(@meal.first.user.id), class: "btn btn-right" %>
    </div>
  </div>
</div>